{
  "id": "eventswitchworkflow",
  "name": "event-switch-wf",
  "expressionLang": "jsonpath",
  "version": "1.0",
  "start": "AddRandomInfo",
  "events": [
    {
      "name": "visaApprovedEvent",
      "source": "",
      "type": "visa_approved_in"
    },
    {
      "name": "visaDeniedEvent",
      "source": "",
      "type": "visa_denied_in"
    },
    {
      "name": "sendVisaApplicationEvent",
      "kind": "produced",
      "source": "",
      "type": "visa_application"
    }
  ],
  "states": [
    {
      "name": "AddRandomInfo",
      "type": "inject",
      "data": {
        "name": "john",
        "age": "20"
      },
      "transition": {
        "nextState": "ChooseOnEvent",
        "produceEvents": [
          {
            "eventRef": "sendVisaApplicationEvent"
          }
        ]
      }
    },
    {
      "name": "ChooseOnEvent",
      "type": "switch",
      "eventConditions": [
        {
          "eventRef": "visaApprovedEvent",
          "transition": "ApprovedVisa"
        },
        {
          "eventRef": "visaDeniedEvent",
          "transition": "DeniedVisa"
        }
      ],
      "defaultCondition": {
        "transition": "HandleNoVisaDecision"
      },
      "timeouts": {
        "eventTimeout": "PT2M"
      }
    },
    {
      "name": "ApprovedVisa",
      "type": "inject",
      "data": {
        "decision": "Approved"
      },
      "end": true
    },
    {
      "name": "DeniedVisa",
      "type": "inject",
      "data": {
        "decision": "Denied"
      },
      "end": true
    },
    {
      "name": "HandleNoVisaDecision",
      "type": "inject",
      "data": {
        "decision": "NoDecision"
      },
      "end": true
    }
  ]
}